#!/bin/bash
#alys: stolen from madlynx driver package :) thank you madlynx!!!
echo -n "pbmtojbg     [REQUIRED] : "; [ -x "$(which pbmtojbg)" ]            && echo "Yes, version: $(pbmtojbg --help 2>&1 | head -1)" || echo "No, install jbigkit"
echo -n "Ghostscript  [REQUIRED] : "; [ -x "$(which gs)" ]                  && echo "Yes, version: $(gs --version)" || echo "No, install ghostscript"
echo -n "ps2write     [REQUIRED] : "; [ -n "$(gs --help | grep ps2write)" ] && echo "Yes" || echo "No"
echo -n "pbmraw       [REQUIRED] : "; [ -n "$(gs --help | grep pbmraw)" ]   && echo "Yes" || echo "No"
echo -n "pnmfile      [REQUIRED] : "; [ -n "$(which pnmfile)" ]             && echo "Yes" || echo "No, install netpbm"
echo -n "pnmrotate    [REQUIRED] : "; [ -n "$(which pnmrotate)" ]           && echo "Yes" || echo "No, install netpbm"

# not used
#echo -n "identify     [REQUIRED] : "; [ -x "$(which identify)" ]            && echo "Yes, version: $(identify -help | head -1)" || echo "No"
#echo -n "inotify-wait [optional] : "; [ -x "$(which inotifywait)" ]         && echo "Yes, version: $(inotifywait --help | head -1)" || echo "No"

